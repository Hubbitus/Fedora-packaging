#!/bin/bash

APP=pgmodeler
VER=0.6.0_alpha

rm -rf $APP-$VER
git clone -b reveng-support --depth 1  https://bitbucket.org/pgmodeler/pgmodeler.git $APP-$VER
GHASH=$( git --git-dir ./$APP-$VER/.git reflog | cut -d' ' -f1 )
rm -rf $APP-$VER/.git
TARF=$APP-${VER}GIT$GHASH.tar.xz
tar -cJf $TARF $APP-$VER
echo "[$TARF] created"
